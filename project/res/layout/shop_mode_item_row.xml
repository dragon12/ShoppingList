<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingRight="5dp"
    >
    
<!-- had some trouble here getting multi-line list views to work properly
     the eventual fix was for each of the layout_height to be fill_parent, and all of the
     gravities to be center_vertical
 -->
    <TextView
        android:id="@+id/item_row_item_quantity"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:text="testQty"
        android:textSize="15dp"
        tools:ignore="HardcodedText"
        />
    

    <TextView
        android:id="@+id/item_row_item_name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:paddingLeft="30dp"
        android:text="testName"
        android:textSize="17dp"
        android:gravity="center_vertical"
        tools:ignore="HardcodedText"
        />
    
    <Button
        android:id="@+id/item_row_item_done"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/shop_mode_done"
        />
    
</LinearLayout>